<?xml version="1.0" encoding="UTF-8" ?>
<hodnotenia>
  {% for row in hodnotenia %}
    <hodnotenie>
      <akademicky-rok>{{ row.akRok }}</akademicky-rok>
      <semester>{{ row.semester }}</semester>
      <predmet>
        <nazov>{{ row.nazov }}</nazov>
        <kod>{{ row.skratka }}</kod>
        <kredity>{{ row.kredit }}</kredity>
        <rozsah>{{ row.rozsah }}</rozsah>
      </predmet>
      <uznane>{{ row.uznane }}</uznane>
      <termin>
        <datum{% if row.timestamp is not empty %} timestamp="{{ row.timestamp }}"{% endif %}>{{ row.datum }}</datum>
        <typ>{{ row.termin }}</typ>
      </termin>
      <znamka>{{ row.znamka }}</znamka>
    </hodnotenie>
  {% endfor %}
</hodnotenia>