{%- block application_content -%}
{ 'attributes': [
    {%- for item in list -%}
      {%- if not loop.first %},{% endif -%}
      {
      'name': {{ item.name|json_encode|raw }},
      'id': {% if item.id is defined %}{{ item.id|json_encode|raw }}{% else %}null{% endif %},
      'values': [
        {%- for value in item.values -%}
          {%- if not loop.first %},{% endif -%}
          {{ value|json_encode|raw }}
        {%- endfor %}]
    }
    {%- endfor -%}
  ]
}
{% endblock %}