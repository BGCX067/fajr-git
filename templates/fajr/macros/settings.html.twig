 # Vypise taby k nastaveniam
 #
 # @param safeHtml $content obsah aktualneho tabu
 # @param safeString $selectedTab aktivny tab
 #}
{% macro settingsTabs(content, selectedTab) %}
  {% import "macros/decorators.html.twig" as decorators %}
  {{ decorators.tabs(content,
      {'Skin': { 'title': 'Zme≈à skin',
                 'url': path('settings_skin') }
      }, selectedTab) }}
{% endmacro %}

